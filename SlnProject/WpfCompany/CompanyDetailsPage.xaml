<Page x:Class="WpfCompany.CompanyDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfCompany"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CompanyDetailsPage">

    <StackPanel Margin="20">
        <TextBlock Text="Bedrijfsgegevens bewerken" FontSize="20" Margin="0,0,0,10" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Naam:" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
            <TextBox x:Name="txtNaam" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

            <TextBlock Text="Contactpersoon:" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
            <TextBox x:Name="txtContact" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

            <TextBlock Text="E-mail:" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
            <TextBox x:Name="txtEmail" Grid.Row="2" Grid.Column="1" Margin="0,5"/>

            <TextBlock Text="Telefoonnummer:" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
            <TextBox x:Name="txtTelefoon" Grid.Row="3" Grid.Column="1" Margin="0,5"/>

            <TextBlock Text="Adres:" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
            <TextBox x:Name="txtAdres" Grid.Row="4" Grid.Column="1" Margin="0,5"/>

            <TextBlock Text="Nieuw wachtwoord:" Grid.Row="5" Grid.Column="0" Margin="0,5"/>
            <PasswordBox x:Name="txtWachtwoord" Grid.Row="5" Grid.Column="1" Margin="0,5"/>

            <Button Content="Opslaan" Width="100" Margin="0,10,0,0" Click="Opslaan_Click" HorizontalAlignment="Right" Grid.Row="6" Grid.Column="1" />

        </Grid>

    </StackPanel>
</Page>
