<Page x:Class="WpfCompany.YearreportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfCompany"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="YearreportsPage">

    <StackPanel Margin="20">
        <TextBlock Text="Overzicht jaarrapporten" FontSize="20" />
        <ListBox x:Name="lstRapporten" Height="200" Margin="0,10" />
        <Button Content="Verwijderen" Width="100" Margin="5" Click="Verwijderen_Click" />
    </StackPanel>
</Page>
