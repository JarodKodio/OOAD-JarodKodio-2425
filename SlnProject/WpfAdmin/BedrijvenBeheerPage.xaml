<Page x:Class="WpfAdmin.BedrijvenBeheerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BedrijvenBeheerPage">

    <StackPanel Margin="20">
        <TextBlock Text="Actieve / geschorste bedrijven" FontSize="20" />
        <ListBox x:Name="lstBedrijven" Height="200" Margin="0,10" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Bewerken" Width="100" Margin="5" Click="Bewerken_Click" />
            <Button Content="Verwijderen" Width="100" Margin="5" Click="Verwijderen_Click" />
        </StackPanel>
    </StackPanel>
</Page>
