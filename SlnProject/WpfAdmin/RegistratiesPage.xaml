<Page x:Class="WpfAdmin.RegistratiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistratiesPage">

    <StackPanel Margin="20">
        <TextBlock Text="Nieuwe registraties" FontSize="20" />
        <ListBox x:Name="lstRegistraties" Height="200" Margin="0,10" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Goedkeuren" Width="100" Margin="5" Click="Goedkeuren_Click" />
            <Button Content="Afkeuren" Width="100" Margin="5" Click="Afkeuren_Click" />
        </StackPanel>
    </StackPanel>
</Page>
