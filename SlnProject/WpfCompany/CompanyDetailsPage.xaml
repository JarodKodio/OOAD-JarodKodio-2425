<Page x:Class="WpfCompany.CompanyDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfCompany"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CompanyDetailsPage">

    <StackPanel Margin="20">
        <TextBlock Text="Bedrijfsgegevens bewerken" FontSize="20" Margin="0,0,0,10" />

        <TextBox x:Name="txtNaam"  Margin="0,5" Width="200"/>
        <TextBox x:Name="txtContact"  Margin="0,5" Width="200"/>
        <TextBox x:Name="txtEmail" Margin="0,5" Width="200"/>
        <TextBox x:Name="txtTelefoon" Margin="0,5" Width="200"/>
        <TextBox x:Name="txtAdres" Margin="0,5" Width="200"/>
        <PasswordBox x:Name="txtWachtwoord" Margin="0,10" Width="200"/>

        <Button Content="Opslaan" Width="100" Margin="0,10,0,0" Click="Opslaan_Click" />
    </StackPanel>
</Page>
