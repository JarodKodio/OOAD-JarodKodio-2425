<Window x:Class="WpfMatchFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMatchFiles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnEerstebestand" Content="kies bestand 1..." HorizontalAlignment="Left" Margin="63,72,0,0" VerticalAlignment="Top" Width="88" Click="BtnEerstebestand_Click"/>
        <Button x:Name="btnTweedebestand" Content="kies bestand 2..." HorizontalAlignment="Left" Margin="63,112,0,0" VerticalAlignment="Top" Width="88" Click="BtnTweedebestand_Click"/>
        <TextBlock x:Name="txtOvereenkomst" HorizontalAlignment="Left" Margin="63,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="149" FontSize="16"><Run Text="Overeenkomst"/><Run Language="nl-be" Text=": "/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name="txtEersteBestand" HorizontalAlignment="Left" Margin="241,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtTweedeBestand" HorizontalAlignment="Left" Margin="241,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnVergelijk" Content="vergelijk" HorizontalAlignment="Left" Margin="310,170,0,0" VerticalAlignment="Top" Width="51" Click="BtnVergelijk_Click"/>
    </Grid>
</Window>
