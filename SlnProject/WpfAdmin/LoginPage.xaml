<Page x:Class="WpfAdmin.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <StackPanel Margin="20">
        <TextBlock Text="Admin Login" FontSize="20" Margin="0 0 0 10" />
        <TextBox x:Name="txtUsername" Margin="0 0 0 10" Width="200" />
        <PasswordBox x:Name="txtPassword" Margin="0 0 0 10" Width="200" />
        <Button Content="Login" Click="Login_Click" Width="100" />
    </StackPanel>
</Page>
